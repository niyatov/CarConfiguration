@model GetModelVM

<div style="text-align:center;">

    <h6>Name : @Model.Name</h6>

    <div style="padding:10px;">

        <img src="~/@Model.ImagePath" alt="image" width="600px" height="300px" />

    </div>

    <a asp-controller="Models" asp-action="UpdateModel" asp-route-modelId="@Model.Id" class="btn btn-warning"> Update </a>
    <a asp-controller="Models" asp-action="DeleteModel" asp-route-modelId="@Model.Id" class="btn btn-danger"> Delete </a>

</div>

@if (Model.Id == 1 || Model.Id == 2)
{
    <br />
    <div style="text-align:center;">
           Only ferrari and bugatte can't be changed
    </div>
}

